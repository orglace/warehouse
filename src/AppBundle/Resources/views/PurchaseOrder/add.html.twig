{% extends '::base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block titlebar -%}Order{% endblock %}

{% block body -%}
    
    <div class="row content-boxes-v2 margin-bottom-30">
        <div class="col-md-7 md-margin-bottom-30"> 
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-danger fade in" style="padding: 10px;">
                    <strong>Oh snap!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            
            <div class="panel panel-green margin-bottom-40" style="border-color: #72c02c;">
                <div class="panel-heading" style="background: #72c02c;">
                    <h3 class="panel-title"><i class="fa fa-tasks"></i> Add a product</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'class': 'form-inline', 'role': 'form'},}) }}
                        <div class="form-group">
                            {{ form_errors(form.product) }}
                            {{ form_widget(form.product) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.quantity) }}
                            {{ form_widget(form.quantity) }}
                        </div>
                        {{ form_widget(form.add, {'disabled': addDisabled, 'attr': {'class': 'btn-u btn-u-default'},}) }}
                        
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="panel panel-sea margin-bottom-40" style="border-color: #72c02c;">
                <div class="panel-heading" style="background: #72c02c;">
                    <h3 class="panel-title"><i class="glyphicon glyphicon-list"></i> Order Items</h3>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in arrProduct %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ arrQuantity[loop.index0] }}</td>
                            <td> <a class="btn btn-danger btn-xs" href="{{ path('order_product_delete', { 'id': product.id }) }}"><i class="fa fa-trash-o"></i> delete</a> </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div>
                <a class="btn-u" href="{{ path('order_product_buy') }}"><i class="fa fa-shopping-cart"></i> Buy</a>
            </div>
        </div>
        
        <div class="col-md-4 md-margin-bottom-30">
            
            <div class="shadow-wrapper margin-bottom-60">
                <div class="tag-box tag-box-v1 box-shadow shadow-effect-2">
                    <h2 class="heading-sm">
                        <i class="icon-custom rounded-x icon-sm icon-color-u fa fa-lightbulb-o"></i>
                        <span>Information</span>
                    </h2>
                    <ul>
                        <li>
                            You have to add 5 products to order mandatory.
                        </li>
                        <li>
                            If you want to test the stock level validation add a quantity more than 100.
                        </li>
                    </ul>
                    
                </div>
            </div>
        </div>
        
    </div>
    
</div>

{% endblock %}