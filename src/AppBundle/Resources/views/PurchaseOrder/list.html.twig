{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ProductOrder list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
        {% for order in arrPurchaseOrder %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.date | date('Y-m-d')}}</td>
                <td>{{ order.user }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('order_product_add') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
